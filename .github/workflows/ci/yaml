name: CI

on:
  push:
    branches: main
  pull_request:
    branches: main

jobs:
  test;
    runs-on: ubuntu-latest
    name: Ubuntu Test
    steps:
      - uses: actions/checkout@v2
      - name: Rust Stable
        uses: actions-rs/toolchain@v1
        with:
          profile: minimal
          toolchain: stable
          override: true
      - name: Cargo Build
        uses: actions-rs/cargo@v1
        with:
          command: build
      - name: Test
        run: cd test && ../target/Debug/chp.exe test
